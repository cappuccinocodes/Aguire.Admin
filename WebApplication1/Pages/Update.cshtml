@page
@model WebApplication1.Pages.UpdateModel
@{
}

<h4>Update Record</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Sleep.Id" />
            <div class="form-group">
                <label asp-for="Sleep.DateStart" class="control-label"></label>
                <input asp-for="Sleep.DateStart" class="form-control" />
                <span asp-validation-for="Sleep.DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sleep.DateEnd" class="control-label"></label>
                <input asp-for="Sleep.DateEnd" class="form-control" />
                <span asp-validation-for="Sleep.DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
