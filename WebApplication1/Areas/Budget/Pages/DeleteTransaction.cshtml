@page
@model WebApplication1.Areas.Budget.Pages.DeleteTransactionModel
@{
}

<h3>Are you sure you want to delete this transaction?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Type)
        </dt>
        <dd class="col-sm-10">
            @Model.Transaction.Type.ToDescription()
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Transaction.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /><br />
    </form>
</div>